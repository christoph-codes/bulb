{
  "name": "bulb",
  "version": "1.0.0",
  "description": "Bulb, the idea community for ideators",
  "main": "backend/index.js",
  "scripts": {
    "install": "cd backend && npm install",
    "backend": "kill-port 5555 && cd backend && heroku local web",
    "emu": "cd backend && firebase emulators:start",
    "frontend": "cd frontend && npm run dev",
    "kill": "kill-port 5555 #This is to kill port 5555 for the backend",
    "start": "node backend/index.js",
    "dev": "concurrently \"yarn emu\" \"cd backend && heroku local web\" \"cd frontend && npm run dev\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christoph-codes/bulb.git"
  },
  "keywords": [
    "node",
    "reactjs",
    "nextjs",
    "express",
    "javascript",
    "html",
    "css"
  ],
  "author": "Christopher Jones",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/christoph-codes/bulb/issues"
  },
  "homepage": "https://github.com/christoph-codes/bulb#readme",
  "dependencies": {
    "concurrently": "^6.4.0",
    "mongodb": "^4.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0"
  }
}
